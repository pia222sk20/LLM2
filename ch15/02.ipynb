        "import warnings\n",
        "warnings.filterwarnings('ignore')\n",
        "\n",
        "import nltk\n",
        "import torch\n",
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "from sklearn.model_selection import train_test_split\n",
        "from sklearn.metrics import confusion_matrix, classification_report\n",
        "from transformers import  AutoTokenizer,  AutoModelForSequenceClassification\n",
        "import datasets"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 3,
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "M1eW9_QDjhni",
        "outputId": "1ab69cb1-3510-4471-a605-8765cc0045d0"
      },
      "outputs": [
        {
          "name": "stderr",
          "output_type": "stream",
          "text": [
            "[nltk_data] Downloading package movie_reviews to /root/nltk_data...\n",
            "[nltk_data]   Unzipping corpora/movie_reviews.zip.\n"
          ]
        }
      ],
      "source": [
        "# 데이터 다운로드\n",
        "# 라벨은 pos:1  neg:0\n",
        "nltk.download('movie_reviews')\n",
        "from nltk.corpus import movie_reviews\n",
        "reviews = [movie_reviews.raw(id) for id in movie_reviews.fileids()]\n",
        "categoris = [ movie_reviews.categories(id)[0] for id in movie_reviews.fileids() ]\n",
        "labels = [  1 if label == 'pos' else 0 for label in categoris   ]"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 4,
      "metadata": {
        "id": "qAGTOSOkjsIh"
      },
      "outputs": [],
      "source": [
        "from sklearn.model_selection import train_test_split\n",
        "train_texts, test_texts, train_labels, test_labels \\\n",
        "  = train_test_split(reviews, labels, stratify=labels, test_size=0.2, random_state=42)"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": null,
      "metadata": {
        "id": "Lp7z8_5xj5-h"
      },
      "outputs": [],
      "source": [
        "# 토크나이져\n",
        "BERT_MODEL_NAME = 'bert-base-uncased'\n",
        "tokenizer = AutoTokenizer.from_pretrained(BERT_MODEL_NAME)\n",
        "# 훈련/테스트 데이터 토근화\n",
        "train_encodings = tokenizer(train_texts, truncation=True, padding=True,return_tensors='pt',max_length=512)\n",
        "test_encodings = tokenizer(test_texts, truncation=True, padding=True,return_tensors='pt',max_length=512)\n",
        "train_encodings['input_ids'].shape,  test_encodings['input_ids'].shape\n"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 6,
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "Z2bZ_uN1ojeB",
        "outputId": "7f34262e-f90b-4e0e-f9ef-e24ddb4533d4"
      },
      "outputs": [
        {
          "name": "stdout",
          "output_type": "stream",
          "text": [
            "훈련 샘플수 : 1600\n",
            "테스트 샘플수 : 400\n"
          ]
        }
      ],
      "source": [
        "# torch dataset 구성\n",
        "class MovieReviewDataset(torch.utils.data.Dataset):\n",
        "  def __init__(self, encodings, labels):\n",
        "    self.encodings = encodings\n",
        "    self.labels = labels\n",
        "  def __len__(self):\n",
        "    return len(self.labels)\n",
        "  def __getitem__(self, idx):\n",
        "    item = {key: val[idx].clone().detach() for key, val in self.encodings.items()}\n",
        "    item['labels'] = torch.tensor(self.labels[idx])\n",
        "    return item\n",
        "train_dataset =   MovieReviewDataset(train_encodings, train_labels)\n",
        "test_dataset =  MovieReviewDataset(test_encodings,test_labels)\n",
        "print(f'훈련 샘플수 : {len(train_dataset)}')\n",
        "print(f'테스트 샘플수 : {len(test_dataset)}')"
      ]
    },
